<Window x:Class="SBVM_IDE.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SBVM_IDE"
        mc:Ignorable="d"
        Title="SBVM" Height="350" Width="525" Background="White">

    <Grid>
        <Grid Margin="0,0">
            <TextBox x:Name="textBox" CharacterCasing="Upper" Margin="10" Text="START&#xD;&#xA;PUSH HELLO WORLD&#xD;&#xA;PRINT&#xD;&#xA;END" AcceptsReturn="True" FontFamily="Consolas">
                <TextBox.ContextMenu>
                    <ContextMenu HasDropShadow="True" FontWeight="Light" FontStretch="SemiCondensed">
                        <MenuItem Command="Cut"/>
                        <MenuItem Command="Copy"/>
                        <MenuItem Command="Paste"/>
                        <Separator />
                        <MenuItem Header="Debug"  Click="debug" />
                        <MenuItem Header="Release" Click="release" />
                    </ContextMenu>
                </TextBox.ContextMenu>
            </TextBox>
        </Grid>
    </Grid>
</Window>
